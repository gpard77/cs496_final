<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pardg.junkmovers.AdminDashboardActivity">

    <TextView
        android:text="Junk Movers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/titlePageTwo"
        android:textSize="36sp"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:textAllCaps="false"/>

    <TextView
        android:text="ADMIN DASHBOARD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePageTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:typeface="normal"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"/>

    <Button
        android:text="View Active Jobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/viewJobs"
        android:onClick="toActiveJobList"/>

    <Button
        android:text="DELETE JOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addJob"
        android:layout_alignStart="@+id/addJob"
        android:id="@+id/deleteJob"
        android:onClick="toAdminDeleteJob"/>

    <Button
        android:text="ADD JOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addJob"
        android:layout_below="@+id/viewJobs"
        android:layout_alignParentEnd="true"
        android:onClick="addJobToJobList"/>
</RelativeLayout>
